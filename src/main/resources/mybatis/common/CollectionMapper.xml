<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.common.dao.CollectionDao">

    <select id="get" resultType="com.bootdo.common.domain.CollectionDO">
		select `id`,`user_id`,`file_id`,`create_time` from sys_collection where
		id =
		#{value}
	</select>

    <select id="list" resultType="com.bootdo.common.domain.CollectionDO">
        select `id`,`user_id`,`file_id`,`create_time` from sys_collection
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="user_id != null and user_id != ''">and user_id = #{user_id}</if>
            <if test="file_id != null and file_id != ''">and file_id = #{file_id}</if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from sys_collection
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="user_id != null and user_id != ''">and user_id = #{user_id}</if>
            <if test="file_id != null and file_id != ''">and file_id = #{file_id}</if>
        </where>
    </select>

    <insert id="save" parameterType="com.bootdo.common.domain.CollectionDO"
            useGeneratedKeys="true" keyProperty="id">
		insert into sys_collection
		(
			`user_id`,
			`file_id`,
			`create_time`
		)
		values
		(
			#{user_id},
			#{file_id},
			#{create_time}
		)
	</insert>

    <delete id="remove">
		delete from sys_collection where id = #{value}
	</delete>

    <delete id="batchRemove">
        delete from sys_collection where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


    <select id="listCollectionRelation" resultType="com.bootdo.common.domain.CollectionRelation">
        select c.*,f.url as file_url,u.name as user_name from sys_collection c, sys_file f,sys_user u
        <where>
            c.file_id=f.id
            and c.user_id=u.user_id
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="user_id != null and user_id != ''">and user_id = #{user_id}</if>
            <if test="file_id != null and file_id != ''">and file_id = #{file_id}</if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
</mapper>